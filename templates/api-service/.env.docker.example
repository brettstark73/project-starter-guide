# Docker Compose Environment Variables
# Copy this file to .env.docker and update the values
# WARNING: Never commit .env.docker to version control!

# PostgreSQL Database Configuration
POSTGRES_USER=api_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=api_service

# API Service Configuration
DATABASE_URL=postgresql://api_user:CHANGE_ME_STRONG_PASSWORD_HERE@db:5432/api_service

# JWT Secret (Production)
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# JWT Secret (Development - optional, defaults to 'dev-jwt-secret')
JWT_SECRET_DEV=dev-jwt-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
