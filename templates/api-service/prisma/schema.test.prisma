// Test schema for SQLite integration tests
generator client {
  provider = "prisma-client-js"
  output   = "./test-client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./test-integration.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  @@map("users")
}