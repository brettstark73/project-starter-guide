FROM node:20-alpine

WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache dumb-init

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server with hot reloading
ENTRYPOINT ["dumb-init", "--"]
CMD ["npm", "run", "dev"]